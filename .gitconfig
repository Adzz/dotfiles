[user]
	name = Adam Lancaster
	email = lancaster28@hotmail.com
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
	excludesfile = ~/.gitignore_global
	hooksPath = /Users/adamlancaster/dotfiles/.git-templates/hooks
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 227
	frag = magenta bold
	commit = 227 bold
	old = red bold
	new = green bold
	whitespace = red reverse
[alias]
	unadd = reset HEAD
  stashes = stash list
  uncommit = reset --soft HEAD~
  sa = stash -u
  a = add
  ac = "!git add . && git commit"
  s = status
	co = checkout
	cob = checkout -b
  ca = commit --amend
  caf = commit --amend --no-edit
  rh = reset --hard
  graph = log --graph -10 --branches --remotes --tags  --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
  undo-amend = reset --soft HEAD@{1}
  la = "!git config -l | grep alias | cut -c 7-"
  up = "!git checkout master && git pull -p && git checkout - && git rebase master"
  pushn = push -u origin HEAD
  pull = "!git pull -p"
  acaf = "!git add --all && git commit --amend --no-edit"
  aca = "!git add --all && git commit --amend"

[vain]
  default = faded
[init]
	templatedir = ~/dotfiles/.git-templates
